<VirtualHost *:80>
        ServerAdmin info@spielmeister.com
	ServerName %VHOST%.spelljs.com

	Header merge Cache-Control no-cache
	Header merge Cache-Control no-store

	RewriteEngine on
	RewriteRule ^/$ http://%{HTTP_HOST}/%VERSION% [L,R=301]

	RewriteCond %{REQUEST_URI} ^/(\d+)\.(\d+)\.(\d+)
	RewriteCond %{REQUEST_URI} !^/%VERSION%
	RewriteRule (.*) http://%{HTTP_HOST}/%VERSION% [L]

	Alias /%VERSION% /opt/spellEngine/%VERSION%/spellEd/public

	ProxyRequests Off
	ProxyPreserveHost On

	ProxyPass /%VERSION% !
	ProxyPass / http://127.0.0.1:%PORT%/
	ProxyPassReverse / http://127.0.0.1:%PORT%/

	<Proxy *>
		AddDefaultCharset off
		Order deny,allow
		Allow from all
	</Proxy>

	<Directory proxy:*>
		Order deny,allow
		Allow from all
	</Directory>

</VirtualHost>

